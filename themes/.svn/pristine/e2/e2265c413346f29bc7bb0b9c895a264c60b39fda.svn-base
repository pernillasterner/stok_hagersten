.ninja-forms-form-wrap :after, .ninja-forms-form-wrap :before {
    display: flex;
    flex-direction: column;
    width: 100%;
}

.nf-field-label label {
    font-weight: 700;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: row;
}

.nf-error-mgs, .ninja-forms-req-symbol {
    display: inline;
    margin-left: 0px;
}

.nf-field-label label {
    font-weight: normal !important;
}

.nf-field-container.textbox-container, .nf-field-container.email-container {
    width: 220px;
    display: flex;
    flex-direction: column;
}

nf-field:first-child > .nf-field-container.textbox-container {
    width: 100%;
}

nf-field .nf-field-element .ninja-forms-field {
    height: 30px;
    font-family: sans-serif;
    font-size: 12px;
    background-color: rgb(255, 255, 255);
    box-shadow: rgb(227, 227, 227) 0px 2px 3px inset;
    padding: 7px;
    border-width: 1px;
    border-style: solid;
    border-color: rgb(155, 155, 155);
    border-image: initial;
}

nf-field .nf-field-element textarea.ninja-forms-field {
    max-height: 100px;
    height: 228px;
}

nf-field .nf-field-element input[type='checkbox'] {
    height: auto;
}

.nf-error-msg, .ninja-forms-req-symbol {
    color: #e80000;
}

nf-field .nf-field .field-wrap .nf-field-element input[type=button] {
    font-size: 16px;
    font-weight: bold;
    color: rgb(255, 255, 255);
    border-width: 0px;
    border-style: initial;
    border-color: initial;
    border-image: initial;
    border-radius: 21px;
    padding: 13px 30px;
    margin: 0px 0px 0px 5px;
    background: linear-gradient(rgb(255, 210, 0), rgb(245, 185, 1));
    display: flex;
    width: auto;
    height: auto;
    line-height: 15px;
}

nf-fields-wrap {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

nf-field:nth-child(1), nf-field:nth-child(2),  nf-field:nth-child(2) > .nf-field-container.textarea-container {
    width: 100%;
}


nf-field {
    display: flex;
}

.label-right .checkbox-wrap .nf-field-label {
    width: 100%;
}
  
/* nf-field:nth-child(even) > .nf-field-container.textbox-container, nf-field:nth-child(even) > .nf-field-container.email-container {
    float: right;
} */

.nf-field-container.submit-container {
    display: block;
    float: none !important;
}

.field-wrap.checkbox-wrap label {
    flex-direction: column;
    display: block;
}