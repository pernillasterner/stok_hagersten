/* Desktops and laptops ----------- */
@media (max-width : 1000px) {

    body {
        padding: 0;
    }

	#wrapper, header.site-header, #credit{
		width: 100%;
	}

	.main-menu{
		margin:20px 0 0 0;
		width: 100%;
		float:left;
        position: relative;
	}

	.main-menu.pie ul {
		margin:0 auto 0 auto;
		float:left;
		width: 200px;
		text-align:left;
	}

	.main-menu.pie ul li {
		float:left;
		display:inline-block;
	}

	#footerWrapper{
		width:700px;
	}

	#footerWrapper dl{
		margin-bottom:30px;
		width:210px;
	}

	.col2{
		width:460px;
		max-width:460px;
	}

		.page-template-template-landingpage-php .col2, .page-template-template-startpage-php .col2, .page-template-template-landingpage-music-php .col2{
			float:left;
			margin-left:10px;
			margin-top:0;
			width:700px;
			max-width:700px;
		}

		.page-template-template-startpage-php .col2{
			margin-top:10px;
		}

		.page-template-template-landingpage-php .calendar-item, .page-template-template-startpage-php .calendar-item, .page-template-template-landingpage-music-php .calendar-item{
			width:320px;
			float:left;
			margin-right:10px;
		}

			.page-template-template-landingpage-php .calendar-item.last, .page-template-template-startpage-php .calendar-item.last, .page-template-template-landingpage-music-php .calendar-item.last{
				margin-right:0;
				float:right;
			}

			.calendar-item a{
				background-position: 415px 0;
			}

			.calendar-item:hover a, .calendar-item a:hover{
				background-position: 425px 0;
			}
}

