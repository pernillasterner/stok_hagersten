    }

    .main-menu.pie ul {
        margin: 0;
        width: 100%;
    }

    .main-menu.pie ul li {
        margin-bottom: 0;
        padding-left: 0;
        padding-right: 0;
        border: 0;
    }

    .main-menu.pie ul li a {
        padding-left: 20px;
    }

    #eyebrow form {
        display: none;
        clear: both;
        width: 100%;
        box-sizing: border-box;
        padding-left: 20px;
        padding-top: 10px;
    }

    #searchform .search-input {
        width: 318px !important;
    }
    #searchform .submit {
        /*width: 16%;*/
    }

    .main-menu form {
        display: block;
        padding-left: 20px;
        padding-top: 10px;
        padding-bottom: 20px;
    }

    .menu-icon {
        position:relative;
        display:inline-block;
        width: 30px;
        text-indent: -999px;
        display: block;
    }

    .border-icon {
        height: 15px;
        border-top: 5px solid #000;
        border-bottom: 5px solid #000;
        float: right;
        margin-top: 30px;
        margin-right: 30px;
    }

    .border-icon:before {
        content: "";
        position: absolute;
        top: 5px;
        left: 0;
        width: 100%;
        border-top: 5px solid #000;
    }
